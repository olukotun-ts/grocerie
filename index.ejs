<!DOCTYPE html>
<html>
<head>
  <title> grocerie </title>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
</head>
<body>
  <div ng-app="grocerie" ng-controller="appCtrl">
    <h1> Grocery list </h1>
    <form>
      <input type="text" ng-model="item"/>
      <button ng-click="add()"> Add to list </button>
      <button ng-click="save()"> Save for later </button>
    </form>
    <div>
      <ul>
        <li ng-repeat="item in items">
          {{item.name}}
        </li>
      </ul>
    </div>
  </div>
  <script>
  angular.module('grocerie', [])
  .controller('appCtrl', function ($scope, $http) {
    $scope.items = []  // Arr of {name: itemName, status: isBought}

    $scope.add = function () {
      $scope.items.push({name: $scope.item, status: false})
      $scope.item = ''
    }

    $scope.save = function () {
      /* Triggers a POST request to server. Server's handler for this request should write list to storage.
      */
      $http({
        url: '/',
        method: 'POST',
        data: JSON.stringify($scope.items)
      })
    }

    $scope.toggleStatus = function (item) {
      item.status = !item.status
    }
  })
  </script>
</body>
</html>